<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key %>');">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-end">
    <%= link_to "Add movie", new_list_bookmark_path(@list), class: "btn btn-success mb-4" %>
  </div>
  <div class="movie-cards">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-movie mb-3" style="width: 16rem;">
        <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, class: "card-img-top" %>
        <div class="card-body">
          <div class="card-head d-flex justify-content-between">
            <h5 class="card-title_rating"><%= bookmark.movie.title %></h5>
            <div>
              <i class="fas fa-star" style="color: gold"></i>
              <p><%= bookmark.movie.rating %></p>
            </div>
          </div>
          <p class="card-text"><%= bookmark.movie.overview %></p>
          <div class="d-flex justify-content-between">
            <div>
              <i class="fas fa-quote-right"></i>
              <p class="card-text"><small class="text-muted"><%= bookmark.comment %></small></p>
            </div>
            <%= link_to bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
