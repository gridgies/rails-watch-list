<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/109669/pexels-photo-109669.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260);">
  <div class="container">
    <h1>Personal movie database</h1>
    <p>Save any kind of movie and leave a review</p>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-end">
    <%= link_to "Add list", new_list_path, class: "btn btn-success mb-4" %>
  </div>

  <h1>My lists</h1>
    <div class="container d-flex justify-content-between">
      <% @lists.each do |list| %>
        <%= link_to list_path(list) do %>
        <%= cl_image_tag list.photo.key %>
        <div class="card-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>')">
          <%= list.name %>
        </div>
        <% end %>

      <% end %>
    </div>
</div>
